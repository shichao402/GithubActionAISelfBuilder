{
  "name": "github-action-builder",
  "version": "1.0.0",
  "description": "GitHub Action 构建脚手架工具 - TypeScript 版本",
  "private": true,
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "scaffold": "ts-node src/scaffold.ts",
    "test:flutter": "ts-node scripts/ProjectOnly/test-flutter-pipeline.ts",
    "act:build": "act -j build",
    "act:release": "act -j release",
    "act:list": "act -l",
    "clean": "rm -rf dist node_modules",
    "push": "ts-node scripts/ProjectOnly/push-git.ts",
    "push:help": "echo 用法: npm run push [提交信息]",
    "ai-debug": "ts-node scripts/ai-debug-workflow.ts",
    "inject": "ts-node scripts/inject-to-parent.ts",
    "test:cursor-rules": "ts-node scripts/test-cursor-rules.ts",
    "test:cursor-rules:parent": "bash scripts/test-in-parent-project.sh"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src",
    "docs"
  ]
}
