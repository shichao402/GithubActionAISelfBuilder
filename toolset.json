{
  "name": "github-action-toolset",
  "displayName": "GitHub Action AI 工具集",
  "version": "1.0.0",
  "description": "GitHub Actions 构建和调试的 AI 规则工具集，帮助 AI 助手更好地完成 CI/CD 任务",
  "author": "firoyang",
  "license": "MIT",
  
  "keywords": [
    "github-actions",
    "ci-cd",
    "ai-rules",
    "workflow",
    "automation"
  ],
  
  "compatibility": {
    "project_types": [
      "nodejs",
      "python",
      "flutter",
      "rust",
      "go",
      "any"
    ],
    "platforms": [
      "windows",
      "macos",
      "linux"
    ]
  },
  
  "requirements": {
    "tools": [
      {
        "name": "gh",
        "version": ">=2.0.0",
        "required": true,
        "install_url": "https://cli.github.com/",
        "description": "GitHub CLI - 用于调试和触发工作流"
      },
      {
        "name": "node",
        "version": ">=16.0.0",
        "required": false,
        "install_url": "https://nodejs.org/",
        "description": "Node.js - 用于 JavaScript/TypeScript 项目（可选）"
      }
    ],
    "environment": {
      "GITHUB_TOKEN": {
        "required": true,
        "description": "GitHub Personal Access Token，用于 API 访问"
      }
    }
  },
  
  "install": {
    "targets": {
      ".cursor/rules/github-actions/": {
        "source": "core/rules/",
        "files": ["*.mdc"],
        "merge": true,
        "overwrite": false,
        "description": "AI 行为规则文件"
      },
      "scripts/toolsets/github-actions/": {
        "source": "core/tools/go/dist/",
        "files": ["gh-action-debug-*"],
        "executable": true,
        "description": "Go 调试工具（自动检测平台）"
      },
      ".github/templates/": {
        "source": "core/templates/",
        "files": ["**/*.yml", "**/*.yaml"],
        "description": "GitHub Actions Workflow 模板"
      }
    },
    "npm_scripts": {
      "ai-debug": "./scripts/toolsets/github-actions/gh-action-debug workflow debug",
      "workflow-list": "./scripts/toolsets/github-actions/gh-action-debug workflow list"
    },
    "hooks": {
      "pre_install": "core/scripts/hooks/pre-install.sh",
      "post_install": "core/scripts/hooks/post-install.sh"
    }
  },
  
  "features": [
    {
      "id": "ai-rules",
      "name": "AI 规则文件",
      "description": "教会 AI 助手如何构建和调试 GitHub Actions 的规则文件",
      "files": ["core/rules/*.mdc"],
      "essential": true
    },
    {
      "id": "debug-tools",
      "name": "Go 自动化调试工具",
      "description": "一键触发、监控和调试 GitHub Actions 工作流（Go 实现，高性能）",
      "files": ["core/tools/go/cmd/gh-action-debug/main.go"],
      "essential": true
    },
    {
      "id": "templates",
      "name": "Workflow 模板库",
      "description": "常用的 GitHub Actions 工作流模板",
      "files": ["core/templates/**/*.yml"],
      "essential": true
    },
    {
      "id": "best-practices",
      "name": "最佳实践文档",
      "description": "GitHub Actions 和 CI/CD 最佳实践",
      "files": ["docs/best-practices/**/*.md"],
      "essential": false
    }
  ],
  
  "scripts": {
    "install": "bash core/scripts/install.sh",
    "uninstall": "bash core/scripts/uninstall.sh",
    "update": "bash core/scripts/update.sh",
    "validate": "bash core/tools/go/test-verify.sh"
  },
  
  "documentation": {
    "quickstart": "docs/USAGE.md",
    "installation": "docs/INSTALL.md",
    "api": "docs/API.md",
    "examples": "docs/examples/",
    "changelog": "CHANGELOG.md"
  },
  
  "repository": {
    "type": "git",
    "url": "https://github.com/firoyang/github-action-toolset"
  },
  
  "metadata": {
    "created": "2025-12-02",
    "updated": "2025-12-02",
    "toolset_version": "1.0.0",
    "schema_version": "1.0.0"
  }
}

